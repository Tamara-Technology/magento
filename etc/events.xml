<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="controller_action_predispatch_checkout_onepage_success">
        <observer name="pre_onepage_success" instance="Tamara\Checkout\Observer\PreOnepageSuccess" />
    </event>
    <event name="sales_order_creditmemo_save_after">
        <observer name="creditmemo_save_after" instance="Tamara\Checkout\Observer\CreditmemoSaveAfter" />
    </event>
    <event name="order_cancel_after">
        <observer name="tamara_order_cancel" instance="Tamara\Checkout\Observer\OrderCancelAfter" />
    </event>
    <event name="sales_order_payment_place_end">
        <observer name="tamara_order_payment_place_end" instance="Tamara\Checkout\Observer\OrderPaymentPlaceEnd" />
    </event>
    <event name="admin_system_config_changed_section_payment">
        <observer name="custom_admin_system_config_changed_section_payment" instance="Tamara\Checkout\Observer\ConfigChange"/>
    </event>
    <event name="sales_order_save_after">
        <observer name="tamada_capture_payment_when_order_status_change" instance="Tamara\Checkout\Observer\OrderSaveAfter"/>
    </event>
</config>
