<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="controller_action_predispatch_checkout_onepage_success">
        <observer name="pre_onepage_success" instance="Tamara\Checkout\Observer\PreOnepageSuccess" />
    </event>
    <event name="checkout_onepage_controller_success_action">
        <observer name="process_gateway_redirect" instance="Tamara\Checkout\Observer\ProcessGatewayRedirect" />
    </event>
    <event name="sales_order_shipment_save_after">
        <observer name="shipment_save_after" instance="Tamara\Checkout\Observer\ShipmentSaveAfter" />
    </event>
    <event name="sales_order_creditmemo_save_after">
        <observer name="creditmemo_save_after" instance="Tamara\Checkout\Observer\CreditmemoSaveAfter" />
    </event>
    <event name="sales_order_invoice_save_after">
        <observer name="invoice_save_after" instance="Tamara\Checkout\Observer\InvoiceSaveAfter" />
    </event>
    <event name="order_cancel_after">
        <observer name="tamara_order_cancel" instance="Tamara\Checkout\Observer\OrderCancelAfter" />
    </event>
</config>
